<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:background="@drawable/background_black_cropped"
    tools:context=".OwnerActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/owner_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleTextColor="@color/white"
        android:elevation="4dp"
        />

    <!--First Row-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:clickable="true"
            android:id="@+id/supplier_btn"
            android:layout_width="125dp"
            android:layout_height="150dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/ripple_effect"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:src="@drawable/ic_supplier"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Supplier" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:alpha="70"
                android:background="@color/colorPrimary"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Olah data Supplier"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:clickable="true"
            android:id="@+id/sparepart_btn"
            android:layout_width="125dp"
            android:layout_height="150dp"
            android:gravity="center"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/ripple_effect"
            android:backgroundTint="@color/white"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:src="@drawable/ic_sparepart"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Sparepart" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:alpha="70"
                android:background="@color/colorPrimary"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Olah data Sparepart"
                android:textSize="10dp" />
        </LinearLayout>

    </LinearLayout>

    <!--Second row-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/pengadaan_btn"
            android:clickable="true"
            android:layout_width="125dp"
            android:layout_height="150dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/ripple_effect"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:src="@drawable/ic_pengadaan"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Pengadaan" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:alpha="70"
                android:background="@color/colorPrimary"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Tambah pengadaan sparepart"
                android:gravity="center"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/laporan_btn"
            android:clickable="true"
            android:layout_width="125dp"
            android:layout_height="150dp"
            android:background="@drawable/ripple_effect"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:src="@drawable/ic_report"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Laporan" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:alpha="70"
                android:background="@color/colorPrimary"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Cek Laporan"
                android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/penjualan_btn"
            android:clickable="true"
            android:layout_width="125dp"
            android:layout_height="150dp"
            android:background="@drawable/ripple_effect"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:src="@drawable/ic_penjualan"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Penjualan" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:alpha="70"
                android:background="@color/colorPrimary"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center"
                android:text="Tambah transaksi penjualan"
                android:textSize="10dp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>