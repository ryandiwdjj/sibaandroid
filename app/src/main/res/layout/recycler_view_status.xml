<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp">
            <TextView
                android:id="@+id/penjualan_recycler_cabang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Id Cabang -> nama"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                />

            <TextView
                android:id="@+id/penjualan_recycler_plat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Plat Nomor Kendaraan"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                />

            <TextView
                android:id="@+id/penjualan_recycler_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status bayar / pekerjaan"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                />

            <TextView
                android:id="@+id/penjualan_recycler_total_harga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Rp. Total harga trans"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"/>

            <TextView
                android:id="@+id/penjualan_recycler_created"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="created_at"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>